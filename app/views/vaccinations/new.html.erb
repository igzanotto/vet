<div class="container">

  <section class="p-5 mb-5" style="background-color: #F4F4F4;">
    <div class="container">
      <div class="row d-flex justify-content-center align-items-center">
        <div class="col-12 col-md-10 col-lg-8 col-xl-8">
          <div class="card shadow-lg" style="border-radius: 0;" data-aos="flip-left">
            <div class="card-body p-5 text-center">

              <h2 class= "mb-4">Add a new Vaccination</h2>

                <%= simple_form_for([@pet, @vaccination])  do |f|%>

                  <div class="form-outline mb-4">
                    <%= f.input :expiration_date, as: :date %>
                  </div>

                  <div class="form-outline mb-4">
                    <%= f.association :vaccine, collection: Vaccine.all %>
                  </div>

                  <div class="form-outline mb-5">
                    <%= f.input :photo, as: :file %>
                  </div>

                  <div class="form-outline mt-4">
                    <span class="highlight-container"><span class="highlight"><%= f.button :submit, class: "btn-update" %></span></span>
                  </div>

                <% end %>
                <%= link_to "Back", pet_vaccinations_path(@pet) %>

            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
