<div class="container ml-auto">
  <section class="m-0 pt-0" style="background-color: #F4F4F4;">
    <div class="container py-5">
      <div class="row d-flex justify-content-center align-items-center">
        <div class="col-12 col-md-12 col-lg-8 col-xl-8">
          <div class="card shadow-lg" style="border-radius: 0;" data-aos="flip-left">
            <div class="card-body p-5 text-center">
              <div class= "d-flex align-items-center justify-content-center mb-4">
                <%= image_tag "logo-caminando.png", class: "ml-5" %>
                <h2 class= "px-4 m-0">Update your details</h2>
                <%# <h2 class= "px-4 m-0">Update your details <%= resource_name.to_s.humanize %></h2>
              </div>
              <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
              <%= f.error_notification %>

                <div class="form-outline mb-4">
                  <%= f.input :email, required: true, autofocus: true, id: "typeEmailX-2", class: "form-control form-control-lg", label: false, placeholder: "Email", hint: "Email" %>
                </div>

                <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                  <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
                <% end %>

                <div class="form-outline mb-4">
                  <%= f.input :password, hint: "Leave it blank if you don't want to change it", required: false, label: false, placeholder: "Password" %>
                </div>

                <div class="form-outline mb-4">
                  <%= f.input :password_confirmation, hint: "Leave it blank if you don't want to change it",required: true, label: false, placeholder: "Password Confirmation" %>
                </div>

                <div class="form-outline mb-4">
                    <%= f.input :name, hint: "Update your name", required: false, input_html: { autocomplete: "current-password" }, label: false, placeholder: "Name" %>
                </div>

                <div class="form-outline mb-4">
                  <%= f.input :photo, as: :file, hint: "Load or update your profile picture", label: false %>
                </div>

                <% if current_user.type_of_user == "Veterinary"%>
                  <div class="form-outline mb-4">
                    <%#= f.input :location, hint: "Write your location", required: false, label: false, placeholder: "Location" %>
                    <%= f.input :location, input_html: {data: {location_autocomplete_target: "location"}, class: "d-none"}, wrapper_html: {data: {controller: "location-autocomplete", location_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}, label: "Location" %>
                  </div>
                  <div class="form-outline mb-4">
                    <%= f.input :doctors, hint: "Name the doctors", required: false, label: false, placeholder: "Doctors" %>
                  </div>
                  <div class="form-outline mb-4">
                    <%= f.input :phone, hint: "Write your phone", required: false, label: false, placeholder: "Phone" %>
                  </div>
                  <div class="form-outline mb-5">
                    <%= f.input :speciality, as: :select, collection: ["Clinic", "Bath", "Vaccination", "Radiology", "Lab", "Neurology", "Oncology", "Nutrition", "Cardiology", "Surgery"], input_html: { multiple: true }, label: false, hint: "Select one or more specialities", required: false, label: false %>
                  </div>
                <% end %>

                <div class="form-outline mb-4">
                  <%= f.input :current_password, hint: "We need your current password to confirm your changes",
                  required: true, input_html: { autocomplete: "current-password" }, label: false, placeholder: "Password" %>
                </div>

                <span class="highlight-container"><span class="highlight"><%= f.button :submit, class: "btn-update" %></span></span><br>

                <%# <hr class="my-4"> %>

                <%# <div class="d-flex align-items-center">
                  <div>Unhappy?</div>
                    <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-link" %>
                <%# </div> %>

                <%= link_to "Back", :back %>

              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

</div>
