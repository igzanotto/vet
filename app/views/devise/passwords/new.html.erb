<section class="vh-100" style="background-color: #F4F4F4;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
          <div class="card shadow-lg" style="border-radius: 0;">
            <div class="card-body p-5 text-center">

              <h3 class= "mb-4">Forgot your password?</h3>
              <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
              <%= f.error_notification %>

                <div class="form-outline mb-5">
                  <%= f.input :email, required: true, autofocus: true, input_html: { autocomplete: "email" }, id: "typeEmailX-2", class: "form-control form-control-lg", label: false, placeholder: "Email" %>
                </div>

                <%= f.button :submit, "Send me reset password instructions", class: "h6 shadow btn btn-primary btn-lg btn-block", style: "width: 100%; font-size: 15px;" %>

                <hr class="my-4">

                <%= render "devise/shared/links" %>
                <br>

              <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
